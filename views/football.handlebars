
<style>
body { 
  display: grid;
  grid-template-areas: 
    "header header header"
    "nav article ads"
    "footer footer footer";
  grid-template-rows: 60px 1fr 100px;
  grid-template-columns: 15% 1fr 25%;
  grid-gap: 10px;
  margin: 0;
  }
header, footer, article, aside, div {
  padding: 10px;
  background: gold;
}
#pageHeader {
  grid-area: header;
}
#pageFooter {
  grid-area: footer;
}
#mainArticle { 
  grid-area: article;      
  }
#mainNav { 
  grid-area: nav; 
  }
#siteAds { 
  grid-area: ads; 
  }
</style>

<script id="entry-template" type="text/x-handlebars-template"></script>

<body>
  <header id="pageHeader">
    <table style="margin-left: auto;"> 
      <tr>
        <td>
            Tervetuloa Jalkapallo-sivulle
        </td>
        <td>
          <select>
              <option>Valitse toiminto</option> <!-- t채m채n nyt ei tarvitsisi edes olla valittavissa -->
              {{#each options}}<!-- luo jokaiselle optionille oman valinnan -->
                <option> {{text}}</option>
              {{/each}}              
            </select>
        </td>
      </tr> 
    </table>
  </header>
  <article id="mainArticle">
    <div id="taulukko">
      <p>Valitse vasemmalta listalta jotain</p>
      </div>
  </article>
  <aside id="mainNav">
    <ul style="list-style: none;">
        <li><a href="" class="view-sarjataulukko">Sarjataulukko</a></li> <!-- linkit mitk채 avaa nuo listat n채kyviin -->
        <li><a href="" class="view-pelaaja-joukkue">Pelaajat ja joukkueet</a></li>
    </ul>
  </aside>
  <div id="siteAds">
    <p>Seuraava tapahtumat</p>
    <ul style="list-style: none;">
        {{#each tapahtumat}} <!-- luo jokaiselle tapahtumalle li elementin -->
         <li> {{date}} {{text}} </li>
        {{/each}}
    </ul>
  </div>
  <footer id="pageFooter">
    <div style="text-align: center">
        <p>Yhteystiedot</p>
    </div>
  </footer>
</body>